}
.top-bar{
  top:0rpx;
  width: 100%;
}
.navbar{ 
 flex: none; 
 display: flex; 

 -webkit-flex: none; 
 display: -webkit-flex; 
 background: #fff; 
 font-size: 30rpx;
position: relative;

} 
.navbar .item{
 flex:1;
 position: relative; 
 text-align: center; 
 line-height: 80rpx; 
 font-size: 24rpx;
 color: #707070;
} 

.navbar .item.active{ 
 color: #0099cc; 
} 
.navbar .item.active:after{ 
 content: ""; 
 display: block; 
 position: absolute; 
 bottom: -1rpx; 
 left: 0; 
 right: 0; 
 height: 4rpx; 
 background: #0099cc; 
}
